{
  "name": "stylelint-config-ccb",
  "version": "3.20.0",
  "description": "Stylelint config which extends stylelint-config-standard",
  "keywords": [
    "stylelint",
    "stylelint-config"
  ],
  "author": "Carlos Jeurissen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/carlosjeurissen/stylelint-config-ccb.git"
  },
  "type": "module",
  "main": "dist/main.cjs",
  "files": [
    "dist/main.cjs",
    "dist/compat.cjs",
    "dist/contentscript.cjs",
    "dist/essentials.cjs"
  ],
  "scripts": {
    "build": "pnpm node index.js",
    "lint-js": "eslint index.js data/*.js __tests__/index.test.js",
    "lint-js-fix": "pnpm run lint-js --fix",
    "lint-fix": "pnpm run lint-js-fix",
    "test": "vitest run",
    "watch": "vitest watch"
  },
  "dependencies": {
    "@carlosjeurissen/stylelint-csstree-validator": "^3.1.0",
    "@double-great/stylelint-a11y": "^3.0.2",
    "@stylistic/stylelint-plugin": "^3.1.1",
    "caniuse-lite": "1.0.30001692",
    "doiuse": "6.0.5",
    "prettier": "^3.4.2",
    "stylelint-color-format": "^1.1.0",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.8.0",
    "stylelint-high-performance-animation": "^1.10.0",
    "stylelint-no-browser-hacks": "^1.3.0",
    "stylelint-no-indistinguishable-colors": "^2.3.0",
    "stylelint-no-nested-media": "^0.1.0",
    "stylelint-no-unsupported-browser-features": "^8.0.2",
    "stylelint-order": "^6.0.4",
    "stylelint-plugin-import": "^1.0.13",
    "stylelint-prettier": "^5.0.2",
    "stylelint-require-units": "^2.0.0",
    "stylelint-selector-no-empty": "^1.0.9",
    "stylelint-selector-pseudo-class-lvhfa": "^3.1.1",
    "stylelint-value-no-unknown-custom-properties": "^6.0.1"
  },
  "devDependencies": {
    "eslint": "^9.18.0",
    "eslint-config-ccb": "^0.31.2",
    "stylelint": "^16.13.1",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "stylelint": ">=16.13.0"
  },
  "browserslist": [
    "Firefox ESR",
    "FirefoxAndroid >= 48",
    "Firefox >= 52",
    "Chrome >= 50",
    "Samsung >= 11",
    "Opera >= 15",
    "Edge >= 79",
    "unreleased Firefox versions",
    "unreleased Chrome versions",
    "unreleased Opera versions",
    "unreleased Edge versions"
  ],
  "stylelint": {
    "extends": "stylelint-config-ccb"
  },
  "pnpm": {
    "overrides": {
      "postcss@<7.0.36": ">=7.0.36",
      "postcss@<8.4.31": ">=8.4.31"
    }
  }
}

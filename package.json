{
  "name": "stylelint-config-ccb",
  "version": "1.19.0",
  "description": "Stylelint config which extends stylelint-config-standard",
  "keywords": [
    "stylelint",
    "stylelint-config"
  ],
  "author": "Carlos Jeurissen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/carlosjeurissen/stylelint-config-ccb.git"
  },
  "main": "dist/index.js",
  "files": [
    "dist/index.js"
  ],
  "scripts": {
    "build": "rollup --input index.js --file dist/index.js --format cjs --exports auto --plugin terser",
    "lint": "eslint index.js data/*.js __tests__/index.test.js",
    "lint-fix": "eslint index.js data/*.js __tests__/index.test.js --fix",
    "test": "jest",
    "watch": "jest --watch"
  },
  "dependencies": {
    "@ronilaukkarinen/stylelint-a11y": "^1.2.4",
    "prettier": "^2.7.1",
    "stylelint-color-format": "^1.1.0",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.5.0",
    "stylelint-no-indistinguishable-colors": "^1.3.0",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-selector-no-empty": "^1.0.9"
  },
  "devDependencies": {
    "eslint": "^8.18.0",
    "eslint-config-ccb": "^0.0.17",
    "jest": "^28.1.1",
    "rollup": "^2.75.7",
    "rollup-plugin-terser": "^7.0.2",
    "stylelint": "^14.9.1"
  },
  "peerDependencies": {
    "stylelint": ">=14.9.0"
  },
  "eslintConfig": {
    "extends": "ccb",
    "env": {
      "es2022": true,
      "node": true
    }
  },
  "stylelint": {
    "extends": "./dist/index.js"
  },
  "pnpm": {
    "overrides": {
      "postcss@<7.0.36": ">=7.0.36"
    }
  }
}

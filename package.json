{
  "name": "stylelint-config-ccb",
  "version": "3.6.0",
  "description": "Stylelint config which extends stylelint-config-standard",
  "keywords": [
    "stylelint",
    "stylelint-config"
  ],
  "author": "Carlos Jeurissen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/carlosjeurissen/stylelint-config-ccb.git"
  },
  "type": "module",
  "main": "dist/main.cjs",
  "files": [
    "dist/main.cjs",
    "dist/compat.cjs",
    "dist/contentscript.cjs",
    "dist/essentials.cjs"
  ],
  "scripts": {
    "build": "pnpm node index.js",
    "lint": "eslint index.js data/*.js __tests__/index.test.js",
    "lint-fix": "eslint index.js data/*.js __tests__/index.test.js --fix",
    "test": "vitest run",
    "watch": "vitest watch"
  },
  "dependencies": {
    "@carlosjeurissen/stylelint-csstree-validator": "^3.1.0",
    "@double-great/stylelint-a11y": "^3.0.2",
    "@stylistic/stylelint-plugin": "^2.0.0",
    "prettier": "^3.2.5",
    "stylelint-color-format": "^1.1.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.8.0",
    "stylelint-high-performance-animation": "^1.10.0",
    "stylelint-no-indistinguishable-colors": "^2.3.0",
    "stylelint-no-nested-media": "^0.1.0",
    "stylelint-no-unsupported-browser-features": "^8.0.1",
    "stylelint-order": "^6.0.4",
    "stylelint-plugin-import": "^1.0.13",
    "stylelint-prettier": "^5.0.0",
    "stylelint-require-units": "^1.0.2",
    "stylelint-selector-no-empty": "^1.0.9",
    "stylelint-value-no-unknown-custom-properties": "^6.0.1"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-ccb": "^0.16.4",
    "stylelint": "^16.2.1",
    "vitest": "^1.2.2"
  },
  "peerDependencies": {
    "stylelint": ">=16.0.0"
  },
  "eslintConfig": {
    "extends": "ccb",
    "env": {
      "es2022": true,
      "node": true
    }
  },
  "stylelint": {
    "extends": "stylelint-config-ccb"
  }
}

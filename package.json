{
  "name": "stylelint-config-ccb",
  "version": "2.0.0",
  "description": "Stylelint config which extends stylelint-config-standard",
  "keywords": [
    "stylelint",
    "stylelint-config"
  ],
  "author": "Carlos Jeurissen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/carlosjeurissen/stylelint-config-ccb.git"
  },
  "main": "dist/main.js",
  "files": [
    "dist/main.js",
    "dist/compat.js",
    "dist/contentscript.js"
  ],
  "scripts": {
    "build": "node index.mjs",
    "lint": "eslint index.mjs data/*.mjs __tests__/index.test.js",
    "lint-fix": "eslint index.mjs data/*.mjs __tests__/index.test.js --fix",
    "test": "jest",
    "watch": "jest --watch"
  },
  "dependencies": {
    "@ronilaukkarinen/stylelint-a11y": "^1.2.7",
    "prettier": "^2.8.8",
    "stylelint-color-format": "^1.1.0",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-csstree-validator": "^2.1.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.7.0",
    "stylelint-high-performance-animation": "^1.8.0",
    "stylelint-no-indistinguishable-colors": "^1.3.2",
    "stylelint-no-nested-media": "^0.1.0",
    "stylelint-no-unsupported-browser-features": "^6.1.0",
    "stylelint-order": "^6.0.3",
    "stylelint-plugin-import": "^1.0.13",
    "stylelint-prettier": "^3.0.0",
    "stylelint-require-units": "^1.0.2",
    "stylelint-selector-no-empty": "^1.0.9",
    "stylelint-stylistic": "^0.4.0",
    "stylelint-value-no-unknown-custom-properties": "^4.0.0"
  },
  "devDependencies": {
    "eslint": "^8.39.0",
    "eslint-config-ccb": "^0.11.2",
    "jest": "^29.5.0",
    "stylelint": "^15.6.0"
  },
  "peerDependencies": {
    "stylelint": ">=14.10.0"
  },
  "eslintConfig": {
    "extends": "ccb",
    "env": {
      "es2022": true,
      "node": true
    }
  },
  "stylelint": {
    "extends": "./dist/main.js"
  },
  "pnpm": {
    "overrides": {
      "postcss@<7.0.36": ">=7.0.36"
    }
  }
}

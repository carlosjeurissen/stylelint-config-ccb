{
  "name": "stylelint-config-ccb",
  "version": "1.40.1",
  "description": "Stylelint config which extends stylelint-config-standard",
  "keywords": [
    "stylelint",
    "stylelint-config"
  ],
  "author": "Carlos Jeurissen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/carlosjeurissen/stylelint-config-ccb.git"
  },
  "main": "dist/main.js",
  "files": [
    "dist/main.js",
    "dist/compat.js"
  ],
  "scripts": {
    "build": "rollup --input index.js --file dist/main.js --format cjs --exports auto --plugin terser",
    "build-compat": "rollup --input index.js --file dist/compat.js --format cjs --exports auto --plugin terser",
    "build-all": "pnpm run build && pnpm run build-compat",
    "lint": "eslint index.js data/*.js __tests__/index.test.js",
    "lint-fix": "eslint index.js data/*.js __tests__/index.test.js --fix",
    "test": "jest",
    "watch": "jest --watch"
  },
  "dependencies": {
    "@ronilaukkarinen/stylelint-a11y": "^1.2.6",
    "prettier": "^2.8.4",
    "stylelint-color-format": "^1.1.0",
    "stylelint-config-standard": "^30.0.1",
    "stylelint-csstree-validator": "^2.1.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.7.0",
    "stylelint-high-performance-animation": "^1.8.0",
    "stylelint-no-indistinguishable-colors": "^1.3.2",
    "stylelint-no-nested-media": "^0.1.0",
    "stylelint-order": "^6.0.2",
    "stylelint-plugin-import": "^1.0.13",
    "stylelint-prettier": "^2.0.0",
    "stylelint-require-units": "^1.0.2",
    "stylelint-selector-no-empty": "^1.0.9",
    "stylelint-value-no-unknown-custom-properties": "^4.0.0"
  },
  "devDependencies": {
    "eslint": "^8.34.0",
    "eslint-config-ccb": "^0.7.0",
    "jest": "^29.4.2",
    "rollup": "^3.15.0",
    "rollup-plugin-terser": "^7.0.2",
    "stylelint": "^15.1.0"
  },
  "peerDependencies": {
    "stylelint": ">=14.10.0"
  },
  "eslintConfig": {
    "extends": "ccb",
    "env": {
      "es2022": true,
      "node": true
    }
  },
  "stylelint": {
    "extends": "./dist/main.js"
  },
  "pnpm": {
    "overrides": {
      "postcss@<7.0.36": ">=7.0.36"
    }
  }
}

{
  "name": "stylelint-config-ccb",
  "version": "2.11.6",
  "description": "Stylelint config which extends stylelint-config-standard",
  "keywords": [
    "stylelint",
    "stylelint-config"
  ],
  "author": "Carlos Jeurissen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/carlosjeurissen/stylelint-config-ccb.git"
  },
  "type": "module",
  "main": "dist/main.cjs",
  "files": [
    "dist/main.cjs",
    "dist/compat.cjs",
    "dist/contentscript.cjs"
  ],
  "scripts": {
    "build": "pnpm node index.js",
    "lint": "eslint index.js data/*.js __tests__/index.test.js",
    "lint-fix": "eslint index.js data/*.js __tests__/index.test.js --fix",
    "test": "vitest run",
    "watch": "vitest watch"
  },
  "dependencies": {
    "@ronilaukkarinen/stylelint-a11y": "^1.2.9",
    "prettier": "^3.2.4",
    "stylelint-color-format": "^1.1.0",
    "stylelint-config-standard": "^35.0.0",
    "stylelint-csstree-validator": "^3.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.8.0",
    "stylelint-high-performance-animation": "^1.10.0",
    "stylelint-no-indistinguishable-colors": "^2.1.0",
    "stylelint-no-nested-media": "^0.1.0",
    "stylelint-no-unsupported-browser-features": "7.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-plugin-import": "^1.0.13",
    "stylelint-prettier": "^4.1.0",
    "stylelint-require-units": "^1.0.2",
    "stylelint-selector-no-empty": "^1.0.9",
    "stylelint-stylistic": "^0.4.5",
    "stylelint-value-no-unknown-custom-properties": "^5.0.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-ccb": "^0.16.2",
    "stylelint": "^15.11.0",
    "vitest": "^1.2.1"
  },
  "peerDependencies": {
    "stylelint": ">=14.10.0"
  },
  "eslintConfig": {
    "extends": "ccb",
    "env": {
      "es2022": true,
      "node": true
    }
  },
  "stylelint": {
    "extends": "stylelint-config-ccb"
  },
  "pnpm": {
    "overrides": {
      "colorguard-processor": "1.0.33",
      "postcss@<8.4.31": ">=8.4.31"
    }
  }
}
